FOBJ=$(DEST)/const.o $(DEST)/hubbard_core.o $(DEST)/hubbard.o $(DEST)/kpoints.o $(DEST)/parallel.o $(DEST)/system.o $(DEST)/comb.o $(DEST)/mrgref.o $(DEST)/environment_report.o $(DEST)/error_handling.o $(DEST)/input.o $(DEST)/parse_input.o 

bin/hubbard.x: $(FOBJ)
	$(MAKE) $(DEST)/environment_report.o FORCE=frc_rebuild 
	$(FC) -o $@ $(FFLAGS) $(LDFLAGS) -I $(DEST) $(FOBJ) $(LIBS)

