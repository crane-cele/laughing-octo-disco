[main]
fc = mpif90
cc = mpicc
cxx = mpiCC
ld = impif90
cppflags = -DHAVE_SSE2 -DPARALLEL
libs = -ltrlan_mpi -lscalapack -lblacsc -lblacsf77 -lblacsmpi -llapack -lblas -cxxlib -lhdf5_fortran -luuid
f90_module_flag = -module

[opt]
fflags = -O3
cxxflags = -O3

[dbg]
fflags = -g -traceback -CB
cxxflags = -g -traceback
