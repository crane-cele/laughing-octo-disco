[main]
fc = mpif90
cc = mpicc
cxx = mpiCC
ld = mpif90
cppflags = -DHAVE_SSE2 -DPARALLEL -DDISABLE_LANCZOS
libs = -mkl -lmkl_scalapack_lp64 -Wl,--start-group -lmkl_intel_lp64 -lmkl_sequential -lmkl_core -lmkl_blacs_openmpi_lp64 -Wl,--end-group -lpthread -cxxlib -lhdf5_fortran -luuid
f90_module_flag = -module

[opt]
fflags = -O3 -openmp
cxxflags = -O3 -openmp
ldflags = -openmp

[dbg]
fflags = -g -traceback -CB
cxxflags = -g -traceback 
