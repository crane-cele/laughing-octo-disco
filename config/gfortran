[DEFAULT]
include_f = -I /usr/include -I ${HDF5_ROOT}/include

[main]
fc = gfortran
cc = gcc
cxx = g++
cppflags =
ld = gfortran
ldflags = -L ${HOME}/lib -L ${HDF5_ROOT}/lib
libs = -ltrlan -llapack -lblas -lstdc++ -lhdf5_fortran -lhdf5 -lz -luuid
f90_module_flag = -J

[opt]
fflags = %(include_f)s -O3
cflags = -O3
cxxflags = -O3

[dbg]
fflags = %(include_f)s -g -fbounds-check -Wall -Wextra -fbacktrace
cflags = -g -Wall -Wextra -fbacktrace
cxxflags = -g -Wall -Wextra -fbacktrace
