[DEFAULT]
include_f = -I $${HDF5_ROOT-/usr}/include

[main]
fc = mpif90
cc = mpicc
cxx = mpiCC
ld = mpif90
cppflags = -DHAVE_SSE2 -DPARALLEL
libs = -ltrlan_mpi -lmkl_scalapack_lp64 -Wl,--start-group -lmkl_gf_lp64 -lmkl_sequential -lmkl_core -lmkl_blacs_openmpi_lp64 -Wl,--end-group -lpthread -lstdc++ -lhdf5_fortran -luuid -llua -ldl
f90_module_flag = -J

[opt]
fflags = %(include_f)s -O3
cxxflags = -O3

[dbg]
fflags = %(include_f)s -g -fbacktrace -fbounds-check
cxxflags = -g -fbacktrace
