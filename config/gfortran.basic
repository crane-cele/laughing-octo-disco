[DEFAULT]
include_c = -I ${HOME}/local/include

[main]
fc = gfortran
cc = gcc
cxx = g++
cppflags = -DDISABLE_HDF5 -DDISABLE_LANCZOS -DDISABLE_UUID
ld = gfortran
ldflags = -L ${HOME}/local/lib
libs = -llapack -lblas -llua -ldl
f90_module_flag = -J

[opt]
fflags = -O3
cflags = %(include_c)s -O3
cxxflags = -O3

[dbg]
fflags = -g -fbounds-check -Wall -Wextra -fbacktrace
cflags = %(include_c)s -g -Wall -Wextra -fbacktrace
cxxflags = -g -Wall -Wextra -fbacktrace
