[main]
fc = gfortran
cc = gcc
cxx = g++
cppflags = -DDISABLE_HDF5 -DDISABLE_LANCZOS -DDISABLE_UUID
ld = gfortran
ldflags = -L ${HOME}/lib
libs = -llapack -lblas -llua -ldl
f90_module_flag = -J

[opt]
fflags = -O3
cflags = -O3
cxxflags = -O3

[dbg]
fflags = -g -fbounds-check -Wall -Wextra -fbacktrace
cflags = -g -Wall -Wextra -fbacktrace
cxxflags = -g -Wall -Wextra -fbacktrace
