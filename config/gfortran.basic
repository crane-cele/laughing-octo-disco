[DEFAULT]
include_f = -I $${HDF5_ROOT-/usr}/include

[main]
fc = gfortran
cc = gcc
cxx = g++
cppflags = -DDISABLE_HDF5 -DDISABLE_LANCZOS -DDISABLE_UUID
ld = gfortran
ldflags = -L ${HOME}/lib
libs = -lstdc++ -lz -llapack -lblas 
f90_module_flag = -J

[opt]
fflags = %(include_f)s -O3
cflags = -O3
cxxflags = -O3

[dbg]
fflags = %(include_f)s -g -fbounds-check -Wall -Wextra -fbacktrace
cflags = -g -Wall -Wextra -fbacktrace
cxxflags = -g -Wall -Wextra -fbacktrace
