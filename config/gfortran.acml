[DEFAULT]
include_f = -I $${HDF5_ROOT-/usr}/include

[main]
fc = gfortran
cc = gcc
cxx = g++
ld = gfortran
libs = -ltrlan -lacml -lstdc++ -lhdf5_fortran -luuid
f90_module_flag = -J

[opt]
fflags = %(include_f)s -O3
cxxflags = -O3

[dbg]
fflags = %(include_f)s -g -fbounds-check -Wall -Wextra -fbacktrace
cxxflags = -g -Wall -Wextra -fbacktrace
